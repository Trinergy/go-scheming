{
    "$schema": "http://json-schema.org/dragt-04/schema#",
    "title": "Person",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "age": {
            "description": "Age in years",
            "type": "integer",
            "minimum": 0
        },
        "gender": {
            "description": "Gender in M or F",
            "type": ["string", "null"]
        } 
    },
    "required": [
        "firstName",
        "lastName"
    ]
}